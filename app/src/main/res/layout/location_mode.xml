<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weather_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlt_location_auto"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="86.75dp"
            android:background="#000"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/img_location_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="已选中"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="自动定位"
                android:textColor="#fff"
                android:textSize="28sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rlt_location_jog"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#000"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_location_jog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="已选中"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="手动定位"
            android:textColor="#fff"
            android:textSize="28sp" />
    </RelativeLayout>

</LinearLayout>