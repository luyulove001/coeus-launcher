<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/weatherbg"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <LinearLayout
        android:id="@+id/zheng"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/weather"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingEnd="11dp"
            android:paddingLeft="25dp"
            android:paddingTop="6dp" >

            <Chronometer
                android:id="@+id/d1_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:paddingRight="24dp"
                android:textColor="@color/white"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingEnd="11dp"
            android:paddingLeft="25dp" >

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_weather_one"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingEnd="6dp"
            android:paddingLeft="25dp" >

            <LinearLayout
                android:id="@+id/lt_weather_two"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_temp_one"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_type_one"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lt_weather_three"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:focusable="true"
                android:gravity="bottom"
                android:orientation="vertical" >
                <ImageButton
                    android:id="@+id/weatherresh"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:src="@mipmap/weatherresh" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>